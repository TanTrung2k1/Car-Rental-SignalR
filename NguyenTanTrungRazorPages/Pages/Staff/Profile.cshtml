@page
@model NguyenTanTrungRazorPages.Pages.Staff.ProfileModel
@{
    ViewData["Title"] = "Staff profile";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-black-50">Staff profile</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <dl class="row">
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.staffAccount.FullName)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.staffAccount.FullName)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.staffAccount.Email)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.staffAccount.Email)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.staffAccount.Password)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.staffAccount.Password)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.staffAccount.Role)
        </dt>
        
        <dd class="col-sm-10">
                @if (Model.staffAccount.Role == 1)
                {
                    <text>Manage</text>
                }
                else
                {
                    <text>Staff</text>
                }
        </dd>
    </dl>
        <div class="align-content-center">
            <a asp-page="./EditProfile" asp-route-id="@Model.staffAccount.StaffId" class="btn btn-sm btn-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
