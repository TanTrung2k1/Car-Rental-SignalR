@page
@model NguyenTanTrungRazorPages.Pages.Staff.IndexModel
@{
    ViewData["Title"] = "Staff page";
}


<div class="card">
    <div class="card-header">
        <div class="row">
    <div class="col-md-6">
        <strong class="text-uppercase text-black-50">List Car</strong>
    </div>
    <div class="d-flex">
        <a href="/Carss" class="btn btn-sm btn-success">Create New</a>
        <a asp-page="Report" class="btn btn-sm btn-warning">Report</a>
        <a asp-page="Profile" class="btn btn-sm btn-secondary">Profile</a>
        <form method="post">
            <button type="submit" asp-page-handler="Logout" class="btn btn-sm btn-danger ms-auto">Logout</button>
        </form>
        
    </div>
</div>
    </div>
    <div class="card-body p-3">
        <form method="post" class="form-inline">
            <div class="form-group">
                <input type="text" class="form-control" asp-for=@Model.searchString placeholder="Search...">
            </div>
            <button type="submit" class="btn btn-secondary">Submit</button>
        </form>
        <table class="table table-bordered table-hover">
            <thead class="thead-dark text-center">
                <tr>
            <th>
                Car name
                        
            </th>
            <th>
                Model year
                        
            </th>
            <th>
                Color
                        
            </th>
            <th>
                Capacity
                       
            </th>
            <th>
                Description
                        
            <th>
                Import date
                        
            </th>
            <th>
                Price
                        
            </th>
            <th>
                Status
                        
            </th>
            <th>
                Producer
                        
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model.listCar)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CarName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarModelYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImportDate)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.RentPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producer.ProcuderName)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.CarId" class="btn btn-sm btn-info">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                                </svg>
                    </a>
                    
                    <a asp-page="./Delete" asp-route-id="@item.CarId" class="btn btn-sm btn-danger">
                           <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-archive" viewBox="0 0 16 16">
                                    <path d="M0 2a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v2a1 1 0 0 1-1 1v7.5a2.5 2.5 0 0 1-2.5 2.5h-9A2.5 2.5 0 0 1 1 12.5V5a1 1 0 0 1-1-1V2zm2 3v7.5A1.5 1.5 0 0 0 3.5 14h9a1.5 1.5 0 0 0 1.5-1.5V5H2zm13-3H1v2h14V2zM5 7.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                                </svg> 
                        </a>
                
            </td>
        </tr>
}
    </tbody>
    </table>

</div>


