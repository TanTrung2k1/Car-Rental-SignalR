@page
@model NguyenTanTrungRazorPages.Pages.Customers.RentModel
@{
    ViewData["Title"] = "Car Rental";
}

<div class="card">
    <div class="card-header ">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-black-50">Create Rental</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Customer Name</label>
                <input type="hidden" asp-for="carRental.CustomerId" class="form-control" />
                <input asp-for="@Model.customerName" class ="form-control" readonly ></input>
            </div>
            <div class="form-group">
                <label class="control-label">Car Name</label>
                <input type="hidden" asp-for="carRental.CarId" class="form-control" />
                <input asp-for="@Model.carName" class ="form-control" readonly ></input>
            </div>
            <div class="form-group">
                <label asp-for="carRental.PickupDate" class="control-label"></label>
                <input asp-for="carRental.PickupDate" class="form-control" />
                <span asp-validation-for="carRental.PickupDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="carRental.ReturnDate" class="control-label"></label>
                <input asp-for="carRental.ReturnDate" class="form-control" />
                <span asp-validation-for="carRental.ReturnDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label">Price</label>
                <input type="hidden" asp-for="carRental.RentPrice" class="form-control" />
                <input asp-for="@Model.rentPrice" class="form-control" readonly/>
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
