@page
@model NguyenTanTrungRazorPages.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customer page";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-black-50">Renting History</strong>
            </div>
            <div class="d-flex">
                <a asp-page="Profile" class="btn btn-sm btn-success">Profile</a>
                <a asp-page="CreateCarRental" class="btn btn-sm btn-secondary">Rental</a>
                <form method="post">
                    <button type="submit" asp-page-handler="Logout" class="btn btn-sm btn-danger ms-auto">Logout</button>
                </form>
            </div>  
        </div>
    </div>
    <div class="card-body p-3">
        
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
        <tr>
            <th>
                        Car name
            </th>
            <th>
                        Pick up date
            </th>
            
            <th>
                        Return date
            </th>
            <th>
                        Total price
            </th>
        </tr>
    </thead>
    <tbody>
                @foreach (var item in Model.carRent)
                {
            <tr>
                <td>
                            @Html.DisplayFor(modelItem => item.Car.CarName)
                </td>
                <td>
                            @Html.DisplayFor(modelItem => item.PickupDate)
                </td>
                <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.RentPrice)
                    </td>
                
            </tr>
                }
    </tbody>
</table>
</div>