@page
@model NguyenTanTrungRazorPages.Pages.Customers.ProfileModel
@{
    ViewData["Title"] = "Customer profile";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-black-50">Customer details</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <dl class="row">
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.CustomerName)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.CustomerName)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.Mobile)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.Mobile)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.CustomerEmail)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.CustomerEmail)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.CustomerPassword)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.CustomerPassword)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.IdentityCard)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.IdentityCard)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.LicenceNumber)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.LicenceNumber)
        </dd>
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.customer.LicenceDate)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.customer.LicenceDate)
        </dd>
    </dl>
        <div class="align-content-center">
            @if (Model.customer.CustomerId != null)
            {
                    <a asp-page="./EditProfile" asp-route-id="@Model.customer.CustomerId" class="btn btn-sm btn-info">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
