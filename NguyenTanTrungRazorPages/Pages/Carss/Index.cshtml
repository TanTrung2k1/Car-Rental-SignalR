@page
@model NguyenTanTrungRazorPages.Pages.Carss.IndexModel
@{
    ViewData["Title"] = "Login page";
}

<button id="addCarBtn">Add Car</button>
<a href="/Staff/Index">Back</a>
<div id="addCarPopup" style="display:none">
    <form>
        <label for="carName">Car Name:</label>
        <input type="text" id="carName" name="carName" required><br>

        <label for="carModelYear">Model Year:</label>
        <input type="text" id="carModelYear" name="carModelYear" required><br>

        <label for="color">Color:</label>
        <input type="text" id="color" name="color" required><br>

        <label for="capacity">Capacity:</label>
        <input type="text" id="capacity" name="capacity" required><br>

        <label for="description">Description:</label>
        <input type="text" id="description" name="description" required><br>

        <label for="importDate">Import Date:</label>
        <input type="date" id="importDate" name="importDate" required><br>

        <label for="rentPrice">Rent Price:</label>
        <input type="text" id="rentPrice" name="rentPrice" required><br>
        <label for="producerId">Producer</label>
                <select id="producerId" name="producerId">
                @foreach (var producer in Model.producers)
                {
                        <option value="@producer.ProducerId">@producer.ProcuderName</option>
                }
                </select>
               
            

        <input type="button" value="Add" id="addCarSubmit">
    </form>
    <div id="error-message"></div>
</div>


<div id="carList" class="card-body p-3">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Car Id</th>
                <th scope="col">Car Name</th>
                <th scope="col">Model Year</th>
                <th scope="col">Color</th>
                <th scope="col">Capacity</th>
                <th scope="col">Description</th>
                <th scope="col">Import Date</th>
                <th scope="col">Rent Price</th>
                <th scope="col">Producer</th>
                <th scope="col">Tool</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/car.js"></script>

