@page
@model NguyenTanTrungRazorPages.Pages.Register.IndexModel
@{
    ViewData["Title"] = "Register page";
}

<button id="addBtn">Add Customer</button>
<a href="/Login">Back to Login</a>
<div id="addCustomerPopup" style="display:none">
    <form>
        <label for="customerName">Customer Name:</label>
        <input type="text" id="customerName" name="customerName" required><br>

        <label for="mobile">Mobile:</label>
        <input type="tel" id="mobile" name="mobile" required><br>

        <label for="customerEmail">Customer Email:</label>
        <input type="email" id="customerEmail" name="customerEmail" required><br>

        <label for="customerPassword">Customer Password:</label>
        <input type="password" id="customerPassword" name="customerPassword" required><br>

        <label for="identityCard">Identity Card:</label>
        <input type="text" id="identityCard" name="identityCard" required><br>

        <label for="licenceNumber">Licence Number:</label>
        <input type="text" id="licenceNumber" name="licenceNumber" required><br>

        <label for="licenceDate">Licence Date:</label>
        <input type="date" id="licenceDate" name="licenceDate" required><br>

        <input type="button" value="Add" id="addCustomerSubmit">
    </form>
</div>
<div id="error-message"></div>

<div id="customerList" class="card-body p-3">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Customer Name</th>
                <th scope="col">Mobile</th>
                <th scope="col">Email</th>
                <th scope="col">Identity card</th>
                <th scope="col">LicenceNumber</th>
                <th scope="col">LincenceDate</th>
                
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/customer.js"></script>
